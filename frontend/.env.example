# Frontend Environment Configuration
# Copy this file to .env.local and update values as needed

# =============================================================================
# BACKEND API CONFIGURATION
# =============================================================================
#
# IMPORTANT: NEXT_PUBLIC_BACKEND_API_URL must include the /api/v1 suffix!
# Without it, API requests will fail with 404 errors.
#
# NEXT_PUBLIC_BACKEND_API_URL: Used by browser-side API calls (must include /api/v1)
# BACKEND_URL: Used by server-side Next.js proxy layer (no /api/v1 suffix)

# Local Backend (default for development)
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
NEXT_PUBLIC_BACKEND_API_URL=http://localhost:8000/api/v1
BACKEND_URL=http://localhost:8000

# Railway Sandbox Backend (uncomment to use)
# NEXT_PUBLIC_API_BASE_URL=https://sigmasight-be-sandbox-frontendrailway.up.railway.app
# NEXT_PUBLIC_BACKEND_API_URL=https://sigmasight-be-sandbox-frontendrailway.up.railway.app/api/v1
# BACKEND_URL=https://sigmasight-be-sandbox-frontendrailway.up.railway.app

# Railway Production (uncomment to use production)
# NEXT_PUBLIC_API_BASE_URL=https://sigmasight-be-production.up.railway.app
# NEXT_PUBLIC_BACKEND_API_URL=https://sigmasight-be-production.up.railway.app/api/v1
# BACKEND_URL=https://sigmasight-be-production.up.railway.app

# =============================================================================
# DEVELOPMENT/DEBUG SETTINGS
# =============================================================================

NODE_ENV=development
NEXT_PUBLIC_DEBUG=true

# =============================================================================
# PORTFOLIO CONFIGURATION
# =============================================================================

# Default portfolio to load if none specified
NEXT_PUBLIC_DEFAULT_PORTFOLIO_ID=52110fe1-ca52-42ff-abaa-c0c90e8e21be

# =============================================================================
# MARKET DATA SETTINGS
# =============================================================================

# Refresh interval for real-time data (milliseconds)
NEXT_PUBLIC_MARKET_DATA_REFRESH_INTERVAL=30000

# =============================================================================
# FEATURE FLAGS
# =============================================================================

NEXT_PUBLIC_ENABLE_REALTIME_DATA=true
NEXT_PUBLIC_ENABLE_HISTORICAL_CHARTS=true

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================

# OpenAI API key for AI chat features
# IMPORTANT: Never commit your actual API key to git!
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# ANALYTICS/MONITORING (for future use)
# =============================================================================

# NEXT_PUBLIC_ANALYTICS_ID=
